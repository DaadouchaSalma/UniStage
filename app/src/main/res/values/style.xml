<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="UnistageTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:background">@color/background</item>
    </style>

    <!-- Champ de texte personnalisé -->
    <style name="UnistageEditText" parent="Widget.AppCompat.EditText">
        <item name="android:backgroundTint">@color/accent</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="hintTextColor">@color/hintText</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Bouton stylisé -->
    <style name="UnistageButton" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/primaryDark</item>
        <item name="android:textColor">@color/buttonText</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:elevation">4dp</item>
    </style>

    <!-- Spinner stylisé -->
    <style name="UnistageSpinner" parent="Widget.AppCompat.Spinner">
        <item name="android:backgroundTint">@color/accent</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="ShapeAppearanceOverlay.NavDrawer" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">24dp</item>
        <item name="cornerSizeBottomRight">24dp</item>
    </style>
    <style name="SectionTitle">
        <item name="android:textColor">#3F51B5</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="SectionText">
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="SectionLink">
        <item name="android:textColor">#1E88E5</item>
        <item name="android:textSize">16sp</item>
        <item name="android:autoLink">web</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="ShapeAppearanceOverlay.RoundedButton" parent="">
        <item name="cornerSize">24dp</item>
    </style>

</resources>
